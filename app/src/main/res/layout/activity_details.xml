<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.teamformation.DetailsActivity">

    <TextView
        android:id="@+id/titleforblock3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:text="Contact info: "
        app:layout_constraintBottom_toTopOf="@+id/contacttext"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/titleforblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Overview: "
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="-4dp"
        app:layout_constraintBottom_toTopOf="@+id/overviewtext" />

    <TextView
        android:id="@+id/overviewtext"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/skilltext"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overviewtext"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/contacttext"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/skilltext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.097"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="296dp"
        android:layout_height="42dp"
        android:onClick="deleteClicked"
        android:text="Delete"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Button"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/sendEmialButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_menu_send"
        android:backgroundTint="@color/colorAccent"
        android:onClick="sendEmail"
        android:layout_marginTop="207dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/contacttext"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/titleforblock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="16dp"
        android:text="Skill: "
        app:layout_constraintBottom_toTopOf="@+id/skilltext"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
